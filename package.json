{
  "name": "rune",
  "version": "1.0.0",
  "description": "direct translation to runes.",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss/main.scss dist/css/style.css && cp index.html dist/",
    "watch": "sass src/scss:dist/css --watch",
    "start": "live-server",
    "dev": "npm-run-all --parallel watch start",
    "sass": "sass src/scss/main.scss public/css/style.css",
    "sass:watch": "npm run sass -- --watch",
    "format": "prettier -w src/js"
  },
  "keywords": [],
  "author": "Frederik Rustad",
  "license": "ISC",
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.70.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  }
}
